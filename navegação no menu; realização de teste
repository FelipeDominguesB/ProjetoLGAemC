	 /* ==== Analisando o que o usuário pede ==== */
       	void trataEscolha (char escolha)
	switch (escolha)
	{
		case '1': geraCadatroQuest ();        break;
		case '2': /* INCLUSÃO PENDENTE */
		case '3': realizarTeste (void);
		case '4': /* INCLUSÃO PENDENTE. deve ler o arquivo dat e gravar seus dados num novo arquivo; ao final, deve abrí-lo no notepad. */
		case 'F' || 'f': exit (0)
		default: printf ("Por favor, digite uma opção válida!");	
		
	}       	
		
